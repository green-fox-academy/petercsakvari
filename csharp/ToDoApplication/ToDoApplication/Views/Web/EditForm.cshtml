@model ToDoApplication.models.Todo

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Edit Todo</title>
</head>
<body>
    <div>
        <h1>Edit Todo</h1>
    </div>
    <div>
        <div>
            <form action="/edit/@Model.Id" method="post">
                <div class="form-group">
                    <span>Urgent: </span>@Html.CheckBoxFor(m => m.IsUrgent)
                    <span>Done: </span>@Html.CheckBoxFor(m => m.IsDone)
                </div>
                <div>
                    <label for="content">Content:</label>
                    <input type="text" id="content" name="Content" value="@Model.Content" />
                </div>
                <button type="submit">Submit</button><a href="/">Cancel</a>
            </form>
        </div>
    </div>
</body>
</html>
